.info__title {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 30px;
  border-radius: 5px 5px 0 0;
  font-size: 20px;
  font-weight: 600;
  box-shadow: 0 2px 3px 1px $bg-secondary;
}

.info__list {
  padding: 30px;
  background-color: $bg-primary;
}

.info__list-item {
  font-size: 17px;
}

.info__list-item:not(:last-child) {
  margin-bottom: 10px;
}

.info__actions {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 30px;
  box-shadow: 0 -2px 3px 1px $bg-secondary;
}

.info__btn:not(:last-child) {
  margin-right: 15px;
}
