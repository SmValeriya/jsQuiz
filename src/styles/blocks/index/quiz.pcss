.quiz__header {
  position: relative;
  padding: 30px;
  border-radius: 5px 5px 0 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2px 3px 1px $bg-secondary;
}

.quiz__header-text {
  font-size: 20px;
  font-weight: 600;
}

.quiz__timeline {
  position: absolute;
  bottom: 0;
  left: 0;
}

.quiz__body {
  padding: 20px 30px;
  background-color: $bg-primary;
}

.quiz__question {
  font-size: 25px;
  font-weight: 600;
}

.quiz__ans-list {
  padding: 20px 0;

  &.disable {
    pointer-events: none;
  }
}

.quiz__ans-list-item {
  border: 2px solid $bg-secondary;
  border-radius: 5px;
  padding: 8px 15px;
  font-size: 17px;
  margin-bottom: 15px;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: space-between;

  &:last-child {
    margin-bottom: 0;
  }

  &:hover {
    filter: brightness(1.2);
    border: 2px solid $primary;
  }

  &::after {
    height: 26px;
    width: 26px;
    border-radius: 50%;
    border: 2px solid transparent;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  &.correct {
    color: $success;
    border: 2px solid $success;
  }

  &.incorrect {
    color: $danger;
    border: 2px solid $danger;
  }

  &.correct::after {
    content: "\2713";
    border-color: $success;
  }

  &.incorrect::after {
    content: "\292B";
    border-color: $danger;
  }
}

.quiz__reaction {
  height: 60px;
  padding: 0 30px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -2px 3px 1px $bg-secondary;
}

.quiz__result {
  display: flex;
  user-select: none;
}

.quiz__que-passed,
.quiz__que-count {
  font-weight: 600;
}

.quiz__btn-result {
  display: none;
}
